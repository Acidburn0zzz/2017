.three-rs
	margin-right auto
	margin-left auto
	overflow visible
	
	// width needs defining so it centres with auto left and right margins
	@media only screen and (min-width: 320px)
		width 250px
		
	@media only screen and (min-width: 340px)
		width 320px
		
	@media only screen and (min-width: 580px)
		width 550px
		
	@media only screen and (min-width: 780px)
		margin-top OneLineHeight
		width 415px /* centre so tip of triangle lines up with p in Respect */
	
	.three-rs-list
		background-image url('../images/triangle.svg')
		background-repeat no-repeat
		background-position 0 0
		margin-left -35px /* so middle of triangle is visible */
		padding-top 270px
		position relative
		width 320px
		
		@media only screen and (min-width: 580px)
			height 240px
			list-style-type none
			padding-top 20px
		
		.no-svg
			background-image url('../images/triangle.png')
		
		@media only screen and (min-width: 340px)
			margin-left 0
	
		@media only screen and (min-width: 580px)
			background-size 410px auto
			height 315px
			width 410px

		li // show the ordered list numbers
			font-size 15px // make the numbers not too big
			margin-top 0
			margin-bottom 0
			margin-left 70px
			
			@media only screen and (min-width: 340px)
				margin-left 70px
			
			@media only screen and (min-width: 580px)
				// when it's wider, reorder the list items to reverse order (base to top)
				margin-left 300px
				padding-top 30px
				position absolute
						
			&.three // offset by diagonal
				@media only screen and (min-width: 580px)
					height 85px
					top 0
					margin-top 21px
					margin-left 290px
					
			&.two // offset by diagonal
				@media only screen and (min-width: 580px)
					height 81px
					top 86px
					margin-top 31px
					margin-left 352px
			
			&.one
				@media only screen and (min-width: 580px)
					height 86px
					top 172px
					margin-top 44px
					margin-left 410px
			
		h3
			font-size 18px
			line-height OneLineHeight
			margin-top HalfLineHeight
			margin-bottom HalfLineHeight
			
			@media only screen and (min-width: 580px)
				height 50px
				margin-top 0
				margin-left 3px
				margin-bottom 0
				width 135px
				
		.three h3
			@media only screen and (min-width: 580px)
				width 190px // the top of the triangle can have more space for the longer title
			
		p
			font-size 15px
			line-height 19px
			margin-top 0
			margin-bottom 0
			margin-left -18px // offset the list numbers
			position absolute
			text-align center
			
			@media only screen and (min-width: 340px)
				margin-left -30px
				
			@media only screen and (min-width: 580px)
				font-size 18px
				line-height 24px
				margin-top -20px // no need to offset li padding
				position relative
			
			@media only screen and (min-width: 820px)
				font-size 18px
				line-height 24px
		
			&:before
				display block
				font-weight bold
				
				// ensure adjustments made here are also made to print styles
				@media only screen and (min-width: 580px)
					display none
					height 0
			
			&.base-tier:before
				content '1' // show the corresponding number to the Respect title
				
				// ensure adjustments made here are also made to print styles
				@media only screen and (min-width: 580px)
					content '' // don't show the number as the title is lined up alongside
			
			&.middle-tier:before
				content '2' // show the corresponding number to the Respect title
				
				// ensure adjustments made here are also made to print styles
				@media only screen and (min-width: 580px)
					content '' // don't show the number as the title is lined up alongside
				
			&.top-tier:before
				content '3' // show the corresponding number to the Respect title
				
				// ensure adjustments made here are also made to print styles
				@media only screen and (min-width: 580px)
					content '' // don't show the number as the title is lined up alongside
				
		.base-tier // one
			color black-ninety
			height 84px
			margin-left -35px // -18px offset the list numbers
			margin-right 21px
			padding-top 2px
			top 172px
			width 250px
			
			@media only screen and (min-width: 340px)
				margin-left -34px
			
			@media only screen and (min-width: 580px)
				// when it's wider, let the triangle text follow the order of the list items
				height 80px
				margin-top -68px
				margin-left -353px
				margin-right 0
				padding-top 10px
				top auto
				width 300px
			
		.middle-tier // two
			top 86px
			color black-ninety
			height 69px
			margin-left -10px // -18px offset the list numbers
			margin-right 45px
			padding-top 11px
			width 200px
			
			@media only screen and (min-width: 340px)
				margin-left -10px
				
			@media only screen and (min-width: 580px)
				// when it's wider, let the triangle text follow the order of the list items
				height 74px
				margin-top -59px
				margin-left -275px // offset li margin
				margin-right 0
				padding-top 3px
				top auto
				width 260px
			
		.top-tier // three
			top 0
			color black-ninety
			height 51px
			margin-left 40px // -18px offset the list numbers
			margin-right 95px
			padding-top 35px
			width 100px
			
			@media only screen and (min-width: 340px)
				margin-left 40px
				
			@media only screen and (min-width: 580px)
				// when it's wider, let the triangle text follow the order of the list items
				height 40px
				margin-top -29px
				margin-left -152px // offset li margin
				margin-right 0
				padding-top 1px
				top auto
				width 134px

