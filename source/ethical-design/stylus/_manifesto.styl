	@media only screen and (min-width 600px)
		margin-top TwoLineHeights
		padding-left 0
		padding-right 0
		
	// make up for lack of padding on main
		
	.manifesto-footers
		padding-left HalfLineHeight
		padding-right HalfLineHeight

		@media only screen and (min-width 600px)
			margin 0 auto
			max-width 700px
			padding-left OneAndAHalfLineHeights
			padding-right OneAndAHalfLineHeights

	.long-title
		color black-eighty
		font-family 'Avenir Next', Helvetica, sans-serif
		font-weight bold
		margin-bottom OneLineHeight
		
		@media only screen and (min-width: 780px)
			font-size 72px
			font-weight bold
			line-height 90px
	
	.subheading
		color black-seventy
		margin-top OneLineHeight
		text-align center
		
	.subheading
		font-size 36px
