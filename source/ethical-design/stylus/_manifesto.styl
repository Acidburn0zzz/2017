.poster
	@media only screen and (min-width 600px)
		-webkit-box-shadow 0 0 3px 0 black-forty
		box-shadow 0 0 3px 0 black-forty
		padding-top QuarterLineHeight
		padding-left OneLineHeight
		padding-right OneLineHeight
