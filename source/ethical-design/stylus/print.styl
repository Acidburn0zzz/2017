// *** print styles

// force keep background images and colours
*
	-webkit-print-color-adjust exact
	print-color-adjust exact
	
// set page margins (not widely supported)
@page
	margin-top 0.1cm !important
	margin-bottom 0.1cm !important
	margin-left 0.5cm !important
	margin-right 0.5cm !important

// hide all these page elements
.site-header, .manifesto-footers, .manifesto-footer-wrap
	// manifesto-footer-wrap is there as it seems asides aren't recognised in print styles :-/
	display none
	
// get rid of gap at the top of the page
.long-title
	font-size 86px !important
	margin-top 0px !important
	margin-bottom 10px !important
	line-height 100px !important
	
h2.subheading
	font-size 52px !important
	line-height 52px !important
	margin-top 0 !important
	margin-bottom 15px !important
	
// hide most of the poster styles
.poster
	box-shadow none
	padding-top 0
	padding-bottom 0
	

// reveal image version of triangle, hide html version
.print-triangle
	display block
	height 75%
	margin-left auto
	margin-right auto
	margin-bottom 0
	width 75%
	
.three-rs
	display none
	
// ETHICAL DESIGN callouts
.callouts
	margin-top 0 !important
	margin-bottom 0 !important
	margin-left auto
	margin-right auto
	padding-bottom 0 !important
	width 90%
	
.callout	
	border-bottom none
	float left
	margin-top 0 !important
	margin-bottom 0 !important
	padding-bottom 0 !important
	width 33%
	
	&:before
		display none !important

	h2
		line-height 36px
		margin-top 0 !important
		padding-top HalfLineHeight
		padding-left 12px !important
		padding-right 12px !important
		
	p
		font-size 13px
		line-height 18px
		padding-left 12px !important
		padding-right 12px !important
		
	.print-icon
		display block !important
		height 118px !important
		margin-top 0 !important
		margin-bottom 0 !important
		margin-left auto !important
		margin-right auto
		width 180px !important
	
.human-rights	
	h2
		margin-left auto
		margin-right auto
		width 120px
		
.human-effort
	h2
		margin-left auto
		margin-right auto
		width 120px
	
.print-logo
	display block
	margin-top -40px !important
	margin-right auto
	margin-left auto
	margin-bottom 0 !important
	width 100px