body
	font-size 24px
	line-height 37.5px
	margin 0
	min-width 320px /* keep width reasonable */

.main
	background white
	dropshadow()
	margin 0
	max-width 800px
	padding 15px 20px

	@media only screen and (min-width: 450px)
		margin 0 auto
		padding 30px

	@media only screen and (min-width: 760px)
		margin 30px auto
		padding 45px 15px 30px 15px

	@media only screen and (min-width: 800px)
		padding 45px 45px 30px 45px

