.intro
	border-bottom neutral8 1px solid
	color neutral3
	font-style italic
	line-height 37.5px
	padding 15px 0

	.wf-active &
		abril-text-italic()
		line-height 35px
		padding 20px 0

	@media only screen and (min-width: 760px)
		line-height 40px

		.wf-active &
			font-size 24px
			padding 20px 0

.description
	background url('/summit/assets/images/crowd.png') bottom center no-repeat
	background-size 100%
	border-style solid
	border-width 3px 0 3px 0
	font-size 38px
	line-height 50px
	font-weight bold
	padding 12.5px 0

	.svg &
		background-image url('/summit/assets/images/crowd.svg')

	.wf-active &
		abril-display-fatface-italic()
		font-size 40px
		line-height 55px
		padding 15px 0 25px 0

	@media only screen and (min-width: 760px)
		font-size 85px
		line-height 110px
		padding 32px 0 22px 0

		.wf-active &
			font-size 100px
			line-height 120px
			padding 18px 0 39px 0

	.description--wrap
		font-weight bold

		.wf-active &
			@media only screen and (min-width: 760px)
				display block
				margin-left -20px

.location-details
	border-top neutral6 1px solid
	font-size 21px

	.wf-active &
		font-size 23px

	a
		color neutral3
		text-decoration none

		&:hover, &:active, &:focus
			text-decoration underline

	strong
		abril-text-bold()