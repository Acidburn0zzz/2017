.featuring
	overflow hidden

	h2
		font-size 40px
		line-height 50px
		margin-bottom 15px

		.wf-active &
			abril-display-extra-bold()
			font-size 45px
			line-height 60px

			@media only screen and (min-width: 760px)
				font-size 64px
				line-height 75px

	figure
		margin-bottom 45px

		@media only screen and (min-width: 700px)
			float left
			width 47.6%

			&:nth-child(even)
				clear left
				margin-right 15px

			&:nth-child(odd)
				margin-left 15px

		&:last-of-type
			@media only screen and (min-width: 700px)
				float none
				margin-right auto
				margin-left auto

		img
			display block
			width 100%
			max-width 710px
			border-top 5px solid #444
			border-bottom 5px solid #444


.parenthetical
	clear both
	display block
	font-size 24px
	font-style italic
	line-height 25px
	margin-top 0
	margin-bottom 10px

	.wf-active &
		abril-text-italic()

.feature--name
	font-size 30px
	font-style normal
	font-weight bold
	display block
	line-height 45px
	margin-top 20px
	margin-bottom 5px

