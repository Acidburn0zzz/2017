.main
	margin-top TwoLineHeights

	.long-title
		@media only screen and (min-width: 480px)
			font-size 52px
			line-height TwoLineHeights

		@media only screen and (min-width: 650px)
			font-size 70px
			line-height ThreeLineHeights
	
	.subheading, .lead-in
		text-align center
	
	.lead-in
		margin-bottom OneAndAHalfLineHeights

.three-rs
	margin-right auto
	margin-left auto
	width 320px
	
	@media only screen and (min-width: 580px)
		width 580px
		
	@media only screen and (min-width: 650px)
		width 650px
	
	.three-rs-list
		background-image url('../images/triangle.svg')
		background-repeat no-repeat
		background-position 0 0
		margin-left -14px
		padding-top 270px
		position relative
		width 320px
		
		@media only screen and (min-width: 580px)
			height 240px
			padding-top 20px
		
		.no-svg
			background-image url('../images/triangle.png')
		
		@media only screen and (min-width: 340px)
			margin-left 0
			
		@media only screen and (min-width: 820px)
			background-size 410px auto
			height 315px
			width 410px

		li /* show the ordered list numbers */
			font-size 15px /* make the numbers not too big */
			margin-left 33px
			
			@media only screen and (min-width: 340px)
				margin-left 70px
				
			@media only screen and (min-width: 580px)
				/* when it's wider, reorder the list items to reverse order (base to top) */
				margin-left 300px
				padding-top 30px
				position absolute
				
				&.one
					height 86px
					top 172px
				
				&.two
					height 81px
					top 86px
					
				&.three
					height 85px
					top 0
			
			@media only screen and (min-width: 650px)
				padding-top 20px
				
				:before /* on wider views, add the pointers */
					background url('../images/pointer.svg')
					content ''
					display block
					top 35px
					height 14px /* height of image is 14px, show this much of it */
					width 40px /* width of image is 110px, show this much of it */
					position absolute
					left -70px
					
					.no-svg &
						background-image url('../images/pointer.png')
						
			@media only screen and (min-width: 820px)		
				&.two
					margin-top 25px
					
				&.one
					margin-top 40px
			
		h3
			font-size 18px
			line-height OneLineHeight
			margin-top HalfLineHeight
			margin-bottom HalfLineHeight
			
			@media only screen and (min-width: 580px)
				float right
				font-size 17px
				height 50px
				margin-top 0
				margin-left 3px
				margin-bottom 0
				width 230px
				
		.one h3
			@media only screen and (min-width: 580px)
				width 190px /* so it doesn't escape the left of the viewport on middle-width views */

		li p:before
			display block
			font-weight bold
			
			@media only screen and (min-width: 580px)
				display none
			
		.base-tier:before
			content '1' /* show the corresponding number to the Respect title */
			
			@media only screen and (min-width: 580px)
				content '' /* don't show the number as the title is lined up alongside */
		
		.middle-tier:before
			content '2' /* show the corresponding number to the Respect title */
			
			@media only screen and (min-width: 580px)
				content '' /* don't show the number as the title is lined up alongside */
			
		.top-tier:before
			content '3' /* show the corresponding number to the Respect title */
			
			@media only screen and (min-width: 580px)
				content '' /* don't show the number as the title is lined up alongside */
		
		.one
			@media only screen and (min-width: 580px)
				margin-left 335px
			
			@media only screen and (min-width: 650px)
				margin-left 385px
				
			@media only screen and (min-width: 820px)
				margin-left 455px
				
		.two /* offset by diagonal */
			@media only screen and (min-width: 580px)
				margin-left 283px
			
			@media only screen and (min-width: 650px)
				margin-left 333px
				
			@media only screen and (min-width: 820px)
				margin-left 397px
		
		.three /* offset by diagonal */
			@media only screen and (min-width: 580px)
				margin-left 230px
			
			@media only screen and (min-width: 650px)
				margin-left 280px
			
			@media only screen and (min-width: 820px)
				margin-left 330px
			
		p
			font-size 15px
			line-height 19px
			margin-left -18px /* offset the list numbers */
			position absolute
			text-align center
			
			@media only screen and (min-width: 340px)
				margin-left -30px
				
			@media only screen and (min-width: 580px)
				float left
				line-height 20px
				margin-top -30px /* offset li padding */
				position relative
			
			@media only screen and (min-width: 650px)
				margin-top -20px /* no need to offset li padding */
				
			@media only screen and (min-width: 820px)
				font-size 18px
				line-height 24px
			
		.base-tier
			color black-five
			height 84px
			margin-left 3px /* -18px offset the list numbers */
			margin-right 21px
			padding-top 2px
			top 172px
			width 250px
			
			@media only screen and (min-width: 340px)
				margin-left -34px
			
			@media only screen and (min-width: 580px)
				/* when it's wider, let the triangle text follow the order of the list items */
				height 74px
				margin-left -295px
				margin-right 0
				padding-top 11px
				top auto
			
			@media only screen and (min-width: 650px)
				margin-left -345px
				
			@media only screen and (min-width: 820px)
				height 80px
				margin-left -398px
				padding-top 24px
				width 300px
				
			
		.middle-tier
			top 86px
			border-bottom 2px solid black-eighty
			color black-ninety
			height 69px
			margin-left 27px /* -18px offset the list numbers */
			margin-right 45px
			padding-top 11px
			width 200px
			
			@media only screen and (min-width: 340px)
				margin-left -10px
				
			@media only screen and (min-width: 580px)
				/* when it's wider, let the triangle text follow the order of the list items */
				height 59px
				margin-left -223px
				margin-right 0
				padding-top 22px
				top auto
			
			@media only screen and (min-width: 650px)
				margin-left -273px
				
			@media only screen and (min-width: 820px)
				height 74px
				margin-left -323px
				padding-top 28px
				width 260px
			
		.top-tier
			top 0
			border-bottom 2px solid black-sixty
			color black-seventy
			height 51px
			margin-left 77px /* -18px offset the list numbers */
			margin-right 95px
			padding-top 35px
			width 100px
			
			@media only screen and (min-width: 340px)
				margin-left 40px
				
			@media only screen and (min-width: 580px)
				/* when it's wider, let the triangle text follow the order of the list items */
				height 30px
				margin-left -120px
				margin-right 0
				padding-top 56px
				top auto
			
			@media only screen and (min-width: 650px)
				margin-left -170px
				
			@media only screen and (min-width: 820px)
				height 40px
				margin-left -190px
				padding-top 71px
				width 130px