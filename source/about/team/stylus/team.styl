.full-time
	clear both
	overflow hidden
	text-align center

	img
		margin-top 0 /* remove margin as it's not collapsing against margin above */

.team-names
	.hcard
		@media only screen and (min-width: 780px)
			font-size 21px
			
	.founders, .punctuation
		@media only screen and (min-width: 780px)
			font-size 19px

.h-card
	.mdash
		display inline-block
		padding-right 2px
		padding-left 2px

	.p-job-title, .p-role
		color black-seventy
		font-size 17px

.team
	.p-name, .p-name a, .p-name span
		color black-ninety
		font-weight bold
		line-height OneLineHeight
		margin-bottom 0
		text-decoration none

		@media only screen and (min-width: 780px)
			font-size 21px

.part-time
	.team-names
		@media only screen and (min-width: 780px)
			display -webkit-flex
			display flex
			-webkit-flex-flow row wrap
			flex-flow row wrap
			-webkit-justify-content center
			justify-content center
		
	.photo
		border-radius 50% /* make image circular */
		display block
		margin-bottom HalfLineHeight
		margin-right auto
		margin-left auto
		max-width 160px

		@media only screen and (min-width: 780px)
			margin-bottom OneLineHeight

	.h-card
		display block
		text-align center

		@media only screen and (min-width: 780px)
			width 31%
			-webkit-flex 0 0 31%
			flex 0 0 31%