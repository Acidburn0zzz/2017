#trademarks
	font-size 18px
	line-height OneLineHeight
	
.indie-logo
	background url('/assets/images/indie-balloon-logo.svg') no-repeat center center
	border-bottom none
	display block
	height 0
	margin-top OneLineHeight
	margin-right auto
	margin-left auto
	margin-bottom TwoLineHeights
	overflow hidden
	padding-top 150px /* height of logo */
	padding-left 100% /* ensure width of logo doesn't overflow width of container */
	width 0

	.no-svg &
		background-image url('/assets/images/indie-balloon-logo.png')

	@media only screen and (min-width: 385px)
		background-size 300px 150px /* width and height of logo */
		padding-left 300px /* width of logo */
		
	@media only screen and (min-width: 580px)
		margin-bottom ThreeLineHeights