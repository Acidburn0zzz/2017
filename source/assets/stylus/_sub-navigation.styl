.sub-navigation--list
	margin 0
	margin-top 11px
	overflow hidden
	padding 0
	/* flex box to centre children */
	display -webkit-flex
	display -moz-flex
	display flex
	-webkit-flex-flow row wrap
	-moz-flex-flow row wrap
	flex-flow row wrap
	-webkit-justify-content center
	-moz-justify-content center
	justify-content center

	@media only screen and (min-width: 600px)
		margin-top 0

	li
		float left
		list-style-type none
		margin-bottom 0
		padding 0 13px 7px 13px

		a
			border-bottom 1px solid black-ninety
			color black-ninety
			display block
			float left
			font-size 16px
			line-height ThreeQuartersLineHeight
			padding 18px 1px 1px 1px
			text-decoration none
			transition(.3s)

			&:hover, &:active, &:focus
				border-color black
				color black
				
/* ACTIVE STYLES FOR SUB NAVIGATION LINKS
	Follows pattern of: 
	.body-class .sub-navigation .navigation-link-class a
	Both the body class and the navigation link class are the page name
*/

.blog .sub-navigation .news-link a,
.events .sub-navigation .events-link a,
.summit .sub-navigation .summit-link a,
.summit-videos .sub-navigation .videos-link a,
.summit-video .sub-navigation .videos-link a,
.about .sub-navigation .indie-link a,
.archive .sub-navigation .archive-link a,
.declaration .sub-navigation .manifesto-link a,
.manifesto .sub-navigation .manifesto-link a,
.ethical-design .sub-navigation .manifesto-link a,
.team .sub-navigation .team-link a,
.vision .sub-navigation .vision-link a,
.privacy .sub-navigation .privacy-link a,
.press .sub-navigation .press-link a,
.contact .sub-navigation .contact-link a,
.consulting .sub-navigation .consulting-link a,
.talks .sub-navigation .talks-link a
