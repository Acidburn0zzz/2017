/****************************************************************************
 *							Statistics table								*
 ****************************************************************************/

.home table
	margin-right auto
	margin-left auto
	margin-bottom 18px
	max-width 580px

	th
		font-size 12px
		
		@media only screen and (min-width: 390px)
			font-size 14px

		@media only screen and (min-width: 340px)
			&:nth-of-type(1)
				width 12px

	tbody th
		background center left no-repeat
		text-indent -9999px /* hide text */
		padding 3px 9px /* 9px padding width accounts for 24px wide icons (and some padding) */
		width 12px

		@media only screen and (min-width: 400px)
			text-indent 30px

		&.weight
			background-image url('/better/images/weight-small.svg')

		&.speed
			background-image url('/better/images/speed-small.svg')

		&.requests
			background-image url('/better/images/resources-small.svg')

			@media only screen and (min-width: 460px)
				background-image url('/better/images/resources-small-top-aligned.svg')

	thead tr th:nth-of-type(1) /* select empty column heading */
		max-width 12px

	thead tr th:nth-of-type(4) /* select improvements column heading */ /* wrap the heading text and hide overflow */
		max-width 52px
		word-wrap normal
		overflow hidden
		padding-right 0
		text-overflow ellipsis

		@media only screen and (min-width: 330px)
			max-width 100%
			padding-right 3px

	tbody tr:nth-of-type(1) td, tbody tr:nth-of-type(1) th /* first row */
		padding-top 12px /* add space between table heading and data */

	tbody td
		line-height 18px
		padding 6px

		@media only screen and (min-width: 480px)
			width: 30%;

		&:nth-of-type(3) /* centre improvements data early */
			text-align center

			@media only screen and (min-width: 370px)
				text-align: center;

table td .units
	font-variant small-caps