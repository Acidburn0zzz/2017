.home
	.main
		padding-top OneLineHeight

	.site-footer
		@media only screen and (min-width: 500px)
			margin-top TwoLineHeights
			
.respect
	margin-top OneLineHeight
	margin-bottom 0
	font-size 60px /* bump up to bigger size early (compared to other h1s) */
	line-height ThreeLineHeights
	
	@media only screen and (min-width: 820px)
		font-size 90px
		line-height FiveLineHeights

.callouts
	clear both
	font-size 15px
	line-height 23px
	list-style-type none
	overflow hidden
	padding HalfLineHeight 0
	margin 0
	
	h2
		font-size 21px
		line-height OneLineHeight
		margin-top HalfLineHeight
		margin-bottom QuarterLineHeight

		@media only screen and (min-width: 820px)
			font-size 21px
			line-height OneLineHeight
			margin-bottom QuarterLineHeight
	
	h3
		font-size 18px
		line-height OneLineHeight
		margin-top HalfLineHeight
		margin-bottom QuarterLineHeight
		
		@media only screen and (min-width: 820px)
			line-height 22px
			margin-bottom QuarterLineHeight
		
		a
			font-weight bold
			
.ethical-design-principles
	margin-top OneLineHeight
	padding-bottom 0
	
		@media only screen and (min-width: 780px)
			margin-top HalfLineHeight
	
	h2
		@media only screen and (min-width: 780px)
			border-top 7px solid black-twenty
			padding-top HalfLineHeight
			
	.callout
		margin-top 0
		position relative
		
		p
			hyphens auto
		
		&:before
			content ""
			display block
			height 100px
			margin-right auto
			margin-bottom OneLineHeight
			margin-left auto
			position relative
			width 100px
		
.callout
	padding-bottom HalfLineHeight
	
	@media only screen and (min-width: 780px)
		float left
		width 29.3%
		
	h2, h3
		text-align center
		
		@media only screen and (min-width: 500px)
			text-align left
		
// ETHICAL DESIGN callouts
.human-rights
	&:before
		background url('/ethical-design/images/human-rights.svg') top center no-repeat
	
	@media only screen and (min-width: 780px)
		padding-right OneLineHeight
		
.human-effort
	&:before
		background url('/ethical-design/images/human-effort.svg') top center no-repeat
	
	@media only screen and (min-width: 780px)
		padding-right HalfLineHeight
		padding-left HalfLineHeight

.human-experience
	&:before
		background url('/ethical-design/images/human-experience.svg') top center no-repeat
	
	@media only screen and (min-width: 780px)
		padding-left OneLineHeight
	
.ethical-design-manifesto-description
	border-bottom 1px solid black-thirty
	padding-bottom OneLineHeight
	text-align center
	
	@media only screen and (min-width: 780px)
		padding-bottom TwoLineHeights

.ethical-design-manifesto-icon
	background url('/ethical-design/images/manifesto-document-icon.svg') top center no-repeat
	display block
	font-size 24px
	font-weight bold
	line-height OneAndAHalfLineHeights
	padding-top 144px /* height of icon + padding */
	text-decoration none

// HOMEPAGE FOOTER callouts	
.support
	@media only screen and (min-width: 780px)
		padding-right HalfLineHeight
		width 28.4%
		
.featured
	@media only screen and (min-width: 780px)
		padding-right HalfLineHeight
		padding-left HalfLineHeight
		width 35%

.news
	@media only screen and (min-width: 780px)
		padding-left HalfLineHeight
		width 28.4%

