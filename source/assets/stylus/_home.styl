.support
	@media only screen and (min-width: 780px)
		padding-right HalfLineHeight
		width 28.4%
		
.featured
	@media only screen and (min-width: 780px)
		padding-right HalfLineHeight
		padding-left HalfLineHeight
		width 35%

.news
	@media only screen and (min-width: 780px)
		padding-left HalfLineHeight
		width 28.4%

.callout-link
	display block
	
.illustration
	display block
	margin-right auto
	margin-left auto
	
