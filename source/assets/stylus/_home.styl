.home
	.intro
		font-size 42px
		line-height TwoLineHeights
		padding-bottom OneLineHeight
		text-align center
		
		a
			text-decoration none
			
			.text /* fix standard link underline with 1px bottom border offset to smaller lineheight with text using white shadows to cut through line */
				border-bottom 1px solid black-seventy
				display inline
				text-shadow 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 2px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 0 4px white, 0 2px white, 0 0 4px white, 0 0 4px white
				
				@media only screen and (min-width: 450px)
					display inline-block
					line-height OneAndAHalfLineHeights

	.site-footer
		@media only screen and (min-width: 500px)
			margin-top TwoLineHeights

.heartbeat
	border-top 1px solid black-thirty

	h2
		text-align center
		
	p
		@media only screen and (min-width: 780px)
			float left
			max-width 203px

.heartbeat-icon
	display block
	width 100%
	
	@media only screen and (min-width: 380px)
		margin HalfLineHeight auto
		max-width 360px
		
	@media only screen and (min-width: 780px)
		float left
		margin 0 QuarterLineHeight OneLineHeight QuarterLineHeight
		max-width 270px

